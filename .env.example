# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=gateway
DATABASE_SYNCHRONIZE=true

# Node Environment
NODE_ENV=development
PORT=3000

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=3600

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting (Throttling)
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# MTN Base URL
MTN_BASE_URL=https://sandbox.momodeveloper.mtn.com

# MTN MoMo Collection
MTN_COLLECTION_SUBSCRIPTION_KEY=your-mtn-collection-subscription-key
MTN_COLLECTION_TARGET_ENVIRONMENT=sandbox
MTN_COLLECTION_X_REFERENCE_ID=your-mtn-reference-id
MTN_COLLECTION_API_KEY=your-mtn-collection-api-key

# MTN MoMo Disbursement
MTN_DISBURSEMENT_SUBSCRIPTION_KEY=your-mtn-disbursement-subscription-key
MTN_DISBURSEMENT_TARGET_ENVIRONMENT=sandbox
MTN_DISBURSEMENT_X_REFERENCE_ID=your-mtn-disbursement-reference-id
MTN_DISBURSEMENT_API_KEY=your-mtn-disbursement-api-key
